# ShopSaaS Production Environment Configuration Template
# Copy this file to .env.production and fill in your actual values

# Database (Required)
DATABASE_URL=postgres://user:password@shopsaas-db.flycast:5432/shopsaas

# Session Security (Required)
SESSION_SECRET=your-super-secret-session-key-for-production

# GitHub Integration (Required)
GH_REPO=your-username/evershop-fly
GH_WORKFLOW=deploy-new-shop.yml
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Fly.io API (Required)
FLY_API_TOKEN=your_fly_api_token

# Redis (Required)
REDIS_HOST=shopsaas-db.flycast
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Email Service (Required)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
FROM_EMAIL=noreply@shopsaas.com

# OAuth (Optional - set if you want social login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Webhook Security (Optional but recommended)
SHOPSAAS_WEBHOOK_SECRET=your-webhook-secret-key

# App Configuration
NODE_ENV=production
BASE_URL=https://shopsaas.fly.dev
FRONTEND_URL=https://shopsaas.fly.dev

# Queue Configuration
SHOP_CREATION_CONCURRENCY=2